
<% layout('../master') -%>

<!-- Breadcrumb-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">Home</li>
    <li class="breadcrumb-item">
    <a href="#">Admin</a>
    </li>
    <li class="breadcrumb-item active">Skills</li>
    <!-- Breadcrumb Menu-->
    <li class="breadcrumb-menu d-md-down-none">
    <div class="btn-group" role="group" aria-label="Button group">
        <a class="btn" href="#">
        <i class="icon-speech"></i>
        </a>
        <a class="btn" href="./">
        <i class="icon-graph"></i>Skills</a>
        <a class="btn" href="#">
        <i class="icon-settings"></i> Add skill</a>
    </div>
    </li>
</ol>

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <a class="btn btn-primary btn-lg" href="/admin/skill">My Skill</a>
            <form action="/admin/skill/edit/<%= id %>" method="post" class="my-3 p-3 border">
                <div class="form-group">
                  <label for="nameSkill">Name skill</label>
                  <input type="text" class="form-control" id="nameSkill" name="nameSkill" value=<%=info.name_skill%>>
                </div>
                <div class="form-group">
                  <label for="levelSkill">Level skill</label>
                  <input type="number" class="form-control" id="levelSkill" name="levelSkill" value=<%=info.level_skill%>>
                </div>

                <div class="form-group">
                    <label for="statusSkill">status skill</label>
                    <select class="form-control" name="statusSkill" id="statusSkill">
                        <option value="0" <%= info.status == 0 ? "selected=selected" : "" %> >Deactive</option>
                        <option value="1" <%= info.status == 1 ? "selected=selected" : "" %> >Aactive</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary" name="btnAdd">Submit</button>
            </form>
        </div>
    </div>
</div>